<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.swanstation"
		name="Sony - PlayStation (SwanStation)"
		version="1.0.0.4"
		provider-name="stenzek">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.ps.dualanalog" version="1.0.0"/>
		<import addon="game.controller.ps.dualshock" version="1.0.0"/>
		<import addon="game.controller.ps.gamepad" version="1.0.0"/>
		<import addon="game.controller.ps.guncon.japan" version="1.0.0"/>
		<import addon="game.controller.ps.guncon.western" version="1.0.0"/>
		<import addon="game.controller.ps.mouse" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>PlayStation</platforms>
		<extensions>exe|psexe|cue|bin|img|iso|chd|pbp|ecm|mds|psf|m3u</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv3</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.swanstation</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
		<summary lang="en_GB">Sony - PlayStation (Swanstation)</summary>
		<description lang="en_GB">Swanstation is a fast PlayStation 1 emulator for PC and Android.</description>
	</extension>
</addon>
